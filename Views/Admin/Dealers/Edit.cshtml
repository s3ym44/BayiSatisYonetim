@model DealerEditViewModel
@{
    ViewData["Title"] = "Bayi Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0"><i class="bi bi-pencil"></i> Bayi Düzenle</h4>
    <a asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left"></i> Geri</a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CompanyName" class="form-label"></label>
                    <input asp-for="CompanyName" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="TaxNumber" class="form-label"></label>
                    <input asp-for="TaxNumber" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="BankName" class="form-label"></label>
                    <input asp-for="BankName" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="IBAN" class="form-label"></label>
                    <input asp-for="IBAN" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="CommissionRate" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="CommissionRate" class="form-control" />
                        <span class="input-group-text">%</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<DealerStatus>()" class="form-select"></select>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Kaydet</button>
        </form>
    </div>
</div>
