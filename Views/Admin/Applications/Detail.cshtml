@model ApplicationDetailViewModel
@{
    ViewData["Title"] = "Başvuru Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0"><i class="bi bi-file-earmark-text"></i> @Model.ApplicationNumber</h4>
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left"></i> Geri</a>
</div>

<div class="row g-3">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white"><h6 class="mb-0">Başvuru Bilgileri</h6></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm table-borderless">
                            <tr><td class="text-muted">Başvuru No:</td><td><strong>@Model.ApplicationNumber</strong></td></tr>
                            <tr><td class="text-muted">Ürün:</td><td>@Model.ProductName</td></tr>
                            <tr><td class="text-muted">Firma:</td><td>@Model.CompanyName</td></tr>
                            <tr><td class="text-muted">Kategori:</td><td>@Model.CategoryName</td></tr>
                            <tr><td class="text-muted">Fiyat:</td><td><strong>@Model.ProductPrice.ToString("N0") ₺/ay</strong></td></tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm table-borderless">
                            <tr><td class="text-muted">Kurulum Adresi:</td><td>@Model.InstallationAddress</td></tr>
                            <tr><td class="text-muted">Şehir:</td><td>@Model.InstallationCity</td></tr>
                            <tr><td class="text-muted">Tercih Tarihi:</td><td>@(Model.PreferredDate?.ToString("dd.MM.yyyy") ?? "-")</td></tr>
                            <tr><td class="text-muted">Oluşturulma:</td><td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td></tr>
                            <tr><td class="text-muted">Güncelleme:</td><td>@Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</td></tr>
                        </table>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="alert alert-light mt-2"><strong>Notlar:</strong> @Model.Notes</div>
                }
                @if (!string.IsNullOrEmpty(Model.AdminNotes))
                {
                    <div class="alert alert-info mt-2"><strong>Admin Notları:</strong> @Model.AdminNotes</div>
                }
            </div>
        </div>

        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white"><h6 class="mb-0">Müşteri Bilgileri</h6></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Ad Soyad:</strong> @Model.CustomerName</p>
                        <p><strong>E-posta:</strong> @Model.CustomerEmail</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Telefon:</strong> @Model.CustomerPhone</p>
                        <p><strong>TC Kimlik:</strong> @(Model.CustomerTCKimlik ?? "-")</p>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.DealerName != null)
        {
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white"><h6 class="mb-0">Bayi Bilgileri</h6></div>
                <div class="card-body">
                    <p><strong>Bayi:</strong> @Model.DealerCompany</p>
                    <p><strong>Yetkili:</strong> @Model.DealerName</p>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white"><h6 class="mb-0">Durum</h6></div>
            <div class="card-body text-center">
                @switch (Model.Status)
                {
                    case ApplicationStatus.Pending: <span class="badge bg-warning fs-6 px-4 py-2">Beklemede</span> break;
                    case ApplicationStatus.InReview: <span class="badge bg-info fs-6 px-4 py-2">İnceleniyor</span> break;
                    case ApplicationStatus.Approved: <span class="badge bg-primary fs-6 px-4 py-2">Onaylandı</span> break;
                    case ApplicationStatus.Rejected: <span class="badge bg-danger fs-6 px-4 py-2">Reddedildi</span> break;
                    case ApplicationStatus.Completed: <span class="badge bg-success fs-6 px-4 py-2">Tamamlandı</span> break;
                    case ApplicationStatus.Cancelled: <span class="badge bg-secondary fs-6 px-4 py-2">İptal</span> break;
                }
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white"><h6 class="mb-0">Durum Güncelle</h6></div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label">Yeni Durum</label>
                        <select name="Status" class="form-select">
                            <option value="Pending" selected="@(Model.Status == ApplicationStatus.Pending)">Beklemede</option>
                            <option value="InReview" selected="@(Model.Status == ApplicationStatus.InReview)">İnceleniyor</option>
                            <option value="Approved" selected="@(Model.Status == ApplicationStatus.Approved)">Onaylandı</option>
                            <option value="Rejected" selected="@(Model.Status == ApplicationStatus.Rejected)">Reddedildi</option>
                            <option value="Completed" selected="@(Model.Status == ApplicationStatus.Completed)">Tamamlandı</option>
                            <option value="Cancelled" selected="@(Model.Status == ApplicationStatus.Cancelled)">İptal</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Admin Notu</label>
                        <textarea name="AdminNotes" class="form-control" rows="3">@Model.AdminNotes</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-check-circle"></i> Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
