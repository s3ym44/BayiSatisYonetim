@model List<ActivityLog>
@{
    ViewData["Title"] = "Aktivite Logları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="mb-4"><i class="bi bi-clock-history"></i> Aktivite Logları</h4>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-md-3">
                <label class="form-label small">İşlem Türü</label>
                <select name="action" class="form-select form-select-sm">
                    <option value="">Tümü</option>
                    @foreach (var a in (List<string>)ViewBag.Actions)
                    {
                        <option value="@a" selected="@(ViewBag.CurrentAction == a)">@a</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label small">Arama</label>
                <input type="text" name="search" class="form-control form-control-sm" placeholder="Kullanıcı adı veya detay..." value="@ViewBag.CurrentSearch" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-sm btn-outline-primary w-100"><i class="bi bi-search"></i> Filtrele</button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
                <thead class="table-light">
                    <tr><th>Tarih</th><th>Kullanıcı</th><th>İşlem</th><th>Detay</th><th>IP</th></tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td class="text-nowrap">@log.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@log.User.FullName</td>
                            <td><span class="badge bg-secondary">@log.Action</span></td>
                            <td>@log.Detail</td>
                            <td class="text-muted small">@(log.IpAddress ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<p class="text-muted small mt-2">Son @Model.Count kayıt gösteriliyor.</p>
