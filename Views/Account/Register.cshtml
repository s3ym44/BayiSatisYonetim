@model RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-plus text-primary" style="font-size:3rem"></i>
                        <h3 class="mt-2">Kayıt Ol</h3>
                        <p class="text-muted">Yeni hesap oluşturun</p>
                    </div>
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Kayıt Türü</label>
                            <div class="d-flex gap-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="RegisterType" value="Customer" id="typeCustomer" checked onchange="toggleFields()" />
                                    <label class="form-check-label" for="typeCustomer">Bireysel Müşteri</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="RegisterType" value="Dealer" id="typeDealer" onchange="toggleFields()" />
                                    <label class="form-check-label" for="typeDealer">Bayi</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label"></label>
                                <input asp-for="City" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" />
                        </div>

                        <div id="dealerFields" style="display:none">
                            <hr />
                            <h6 class="text-muted mb-3"><i class="bi bi-building"></i> Bayi Bilgileri</h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CompanyName" class="form-label"></label>
                                    <input asp-for="CompanyName" class="form-control" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="TaxNumber" class="form-label"></label>
                                    <input asp-for="TaxNumber" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div id="customerFields">
                            <hr />
                            <h6 class="text-muted mb-3"><i class="bi bi-person"></i> Kişisel Bilgiler</h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="TCKimlik" class="form-label"></label>
                                    <input asp-for="TCKimlik" class="form-control" maxlength="11" />
                                    <span asp-validation-for="TCKimlik" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="BirthDate" class="form-label"></label>
                                    <input asp-for="BirthDate" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <hr />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2"><i class="bi bi-person-plus"></i> Kayıt Ol</button>
                    </form>
                    <hr />
                    <div class="text-center">
                        <p class="mb-0">Zaten hesabınız var mı? <a asp-action="Login">Giriş Yapın</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
function toggleFields() {
    var isDealer = document.getElementById('typeDealer').checked;
    document.getElementById('dealerFields').style.display = isDealer ? 'block' : 'none';
    document.getElementById('customerFields').style.display = isDealer ? 'none' : 'block';
}
document.addEventListener('DOMContentLoaded', toggleFields);
</script>
}
