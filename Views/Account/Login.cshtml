@model LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-shield-lock text-primary" style="font-size:3rem"></i>
                        <h3 class="mt-2">Giriş Yap</h3>
                        <p class="text-muted">Hesabınıza giriş yapın</p>
                    </div>
                    <form asp-action="Login" method="post">
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="Şifreniz" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 py-2"><i class="bi bi-box-arrow-in-right"></i> Giriş Yap</button>
                    </form>
                    <hr />
                    <div class="text-center">
                        <p class="mb-0">Hesabınız yok mu? <a asp-action="Register">Kayıt Olun</a></p>
                    </div>
                </div>
            </div>
            <div class="card mt-3 border-0 bg-light">
                <div class="card-body small">
                    <strong>Demo Hesaplar:</strong>
                    <div class="row mt-2">
                        <div class="col-4"><strong>Admin:</strong><br/>admin@@bayisatis.com<br/>Admin123!</div>
                        <div class="col-4"><strong>Bayi:</strong><br/>bayi1@@bayisatis.com<br/>Bayi123!</div>
                        <div class="col-4"><strong>Müşteri:</strong><br/>musteri1@@bayisatis.com<br/>Musteri123!</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
