@{
    ViewData["Title"] = "Ana Sayfa";
}

<section class="py-5" style="background:linear-gradient(135deg,#1e293b 0%,#2563eb 100%);color:#fff;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h1 class="display-4 fw-bold mb-3">Bayi Satış Yönetim Sistemi</h1>
                <p class="lead mb-4">İnternet paketleri, alarm sistemleri ve daha fazlasını bayilerimiz aracılığıyla kolayca yönetin. Hızlı başvuru, kolay takip.</p>
                <div class="d-flex gap-3">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg px-4"><i class="bi bi-person-plus"></i> Hemen Kayıt Ol</a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg px-4"><i class="bi bi-box-arrow-in-right"></i> Giriş Yap</a>
                </div>
            </div>
            <div class="col-lg-5 text-center mt-4 mt-lg-0">
                <i class="bi bi-shop" style="font-size:12rem;opacity:.3"></i>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width:64px;height:64px">
                            <i class="bi bi-box-seam text-primary fs-3"></i>
                        </div>
                        <h5>@(ViewBag.ProductCount ?? 0)+ Ürün</h5>
                        <p class="text-muted">Farklı kategorilerde geniş ürün yelpazesi ile hizmetinizdeyiz.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width:64px;height:64px">
                            <i class="bi bi-building text-success fs-3"></i>
                        </div>
                        <h5>@(ViewBag.CompanyCount ?? 0)+ Firma</h5>
                        <p class="text-muted">Türkiye'nin önde gelen firmalarıyla çalışıyoruz.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width:64px;height:64px">
                            <i class="bi bi-people text-warning fs-3"></i>
                        </div>
                        <h5>@(ViewBag.DealerCount ?? 0)+ Bayi</h5>
                        <p class="text-muted">Onaylı bayilerimiz ile güvenli hizmet sunuyoruz.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Nasıl Çalışır?</h2>
        <div class="row g-4">
            <div class="col-md-3 text-center">
                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width:48px;height:48px;font-size:1.2rem;font-weight:bold">1</div>
                <h6>Kayıt Olun</h6>
                <p class="text-muted small">Bayi veya bireysel müşteri olarak kayıt olun.</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width:48px;height:48px;font-size:1.2rem;font-weight:bold">2</div>
                <h6>Ürün Seçin</h6>
                <p class="text-muted small">İhtiyacınıza uygun ürün veya tarifeyi seçin.</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width:48px;height:48px;font-size:1.2rem;font-weight:bold">3</div>
                <h6>Başvuru Yapın</h6>
                <p class="text-muted small">Online başvuru formunu doldurun.</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width:48px;height:48px;font-size:1.2rem;font-weight:bold">4</div>
                <h6>Takip Edin</h6>
                <p class="text-muted small">Başvurunuzun durumunu anlık takip edin.</p>
            </div>
        </div>
    </div>
</section>
