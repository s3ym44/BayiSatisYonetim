@model List<ProductListViewModel>
@{
    ViewData["Title"] = "Ürünler & Tarifeler";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h4 class="mb-4"><i class="bi bi-box-seam"></i> Ürünler & Tarifeler</h4>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-md-3">
                <label class="form-label small">Kategori</label>
                <select name="categoryId" class="form-select form-select-sm" asp-items="ViewBag.Categories as SelectList"><option value="">Tümü</option></select>
            </div>
            <div class="col-md-3">
                <label class="form-label small">Firma</label>
                <select name="companyId" class="form-select form-select-sm" asp-items="ViewBag.Companies as SelectList"><option value="">Tümü</option></select>
            </div>
            <div class="col-md-3">
                <label class="form-label small">Arama</label>
                <input type="text" name="search" class="form-control form-control-sm" placeholder="Ürün adı..." value="@ViewBag.CurrentSearch" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-sm btn-outline-primary w-100"><i class="bi bi-search"></i> Filtrele</button>
            </div>
        </form>
    </div>
</div>

<div class="row g-3">
    @foreach (var p in Model)
    {
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <span class="badge bg-info">@p.CategoryName</span>
                        <span class="badge bg-secondary">@p.CompanyName</span>
                    </div>
                    <h6 class="card-title">@p.Name</h6>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(p.Speed)) { <span class="me-2"><i class="bi bi-speedometer2"></i> @p.Speed</span> }
                        @if (!string.IsNullOrEmpty(p.Quota)) { <span><i class="bi bi-hdd"></i> @p.Quota</span> }
                    </div>
                    @if (p.ContractDuration.HasValue) { <small class="text-muted d-block mb-2"><i class="bi bi-calendar"></i> @p.ContractDuration ay sözleşme</small> }
                    <h4 class="text-primary mb-3">@p.Price.ToString("N0") ₺<small class="text-muted fs-6">/ay</small></h4>
                    <a asp-controller="CustomerApplication" asp-action="Create" asp-route-productId="@p.Id" class="btn btn-primary btn-sm w-100">
                        <i class="bi bi-plus-circle"></i> Başvuru Yap
                    </a>
                </div>
            </div>
        </div>
    }
</div>
<p class="text-muted small mt-3">Toplam @Model.Count ürün listeleniyor.</p>
