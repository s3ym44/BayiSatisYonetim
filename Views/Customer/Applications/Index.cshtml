@model List<ApplicationListViewModel>
@{
    ViewData["Title"] = "Başvurularım";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0"><i class="bi bi-file-earmark-text"></i> Başvurularım</h4>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Yeni Başvuru</a>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-md-3">
                <label class="form-label small">Durum</label>
                <select name="status" class="form-select form-select-sm">
                    <option value="">Tümü</option>
                    <option value="Pending">Beklemede</option>
                    <option value="InReview">İnceleniyor</option>
                    <option value="Approved">Onaylandı</option>
                    <option value="Completed">Tamamlandı</option>
                    <option value="Rejected">Reddedildi</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-sm btn-outline-primary w-100"><i class="bi bi-search"></i> Filtrele</button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr><th>Başvuru No</th><th>Ürün</th><th>Firma</th><th>Bayi</th><th>Şehir</th><th>Durum</th><th>Tarih</th><th></th></tr>
                </thead>
                <tbody>
                    @foreach (var a in Model)
                    {
                        <tr>
                            <td><strong>@a.ApplicationNumber</strong></td>
                            <td>@a.ProductName</td>
                            <td>@a.CompanyName</td>
                            <td>@(a.DealerName ?? "Bireysel")</td>
                            <td>@a.InstallationCity</td>
                            <td>
                                @switch (a.Status)
                                {
                                    case ApplicationStatus.Pending: <span class="badge bg-warning">Beklemede</span> break;
                                    case ApplicationStatus.InReview: <span class="badge bg-info">İnceleniyor</span> break;
                                    case ApplicationStatus.Approved: <span class="badge bg-primary">Onaylandı</span> break;
                                    case ApplicationStatus.Rejected: <span class="badge bg-danger">Reddedildi</span> break;
                                    case ApplicationStatus.Completed: <span class="badge bg-success">Tamamlandı</span> break;
                                    case ApplicationStatus.Cancelled: <span class="badge bg-secondary">İptal</span> break;
                                }
                            </td>
                            <td>@a.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td><a asp-action="Detail" asp-route-id="@a.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i></a></td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr><td colspan="8" class="text-center text-muted py-4">Henüz başvurunuz bulunmuyor.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
