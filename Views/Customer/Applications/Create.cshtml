@model ApplicationCreateViewModel
@{
    ViewData["Title"] = "Yeni Başvuru";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Yeni Başvuru</h4>
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left"></i> Geri</a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <h6 class="text-muted mb-3"><i class="bi bi-box-seam"></i> Ürün Seçimi</h6>
            <div class="mb-3">
                <label asp-for="ProductId" class="form-label"></label>
                <select asp-for="ProductId" asp-items="Model.Products" class="form-select"><option value="">Ürün seçiniz...</option></select>
                <span asp-validation-for="ProductId" class="text-danger small"></span>
            </div>

            <hr />
            <h6 class="text-muted mb-3"><i class="bi bi-geo-alt"></i> Kurulum Bilgileri</h6>
            <div class="row">
                <div class="col-md-8 mb-3">
                    <label asp-for="InstallationAddress" class="form-label"></label>
                    <input asp-for="InstallationAddress" class="form-control" />
                    <span asp-validation-for="InstallationAddress" class="text-danger small"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="InstallationCity" class="form-label"></label>
                    <input asp-for="InstallationCity" class="form-control" />
                    <span asp-validation-for="InstallationCity" class="text-danger small"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="PreferredDate" class="form-label"></label>
                    <input asp-for="PreferredDate" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Ek bilgi veya notlarınız..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Başvuru Oluştur</button>
        </form>
    </div>
</div>
